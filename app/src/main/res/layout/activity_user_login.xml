<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserLogin">

    <Button
            android:text="Open an Account"
            android:layout_width="348dp"
            android:layout_height="89dp"
            android:id="@+id/buttonRegister"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="54dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="54dp"
            app:layout_constraintHorizontal_bias="0.511" android:onClick="doLogin"
            android:layout_marginBottom="76dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Login"
            android:layout_width="348dp"
            android:layout_height="89dp"
            android:id="@+id/buttonLogIn"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="54dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="54dp"
            app:layout_constraintHorizontal_bias="0.511" android:onClick="doLogin"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/buttonRegister"/>
    <EditText
            android:layout_width="308dp"
            android:layout_height="51dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editTextUN"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="46dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="65dp"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="11dp" app:layout_constraintTop_toBottomOf="@+id/textViewLoginError"
            android:layout_marginBottom="31dp" app:layout_constraintBottom_toTopOf="@+id/editTextPass"
    />
    <EditText
            android:layout_width="308dp"
            android:layout_height="51dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextPass" android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonLogIn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="82dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="116dp" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextUN" app:layout_constraintHorizontal_bias="0.421"
            app:layout_constraintVertical_bias="0.217"/>
    <TextView
            android:layout_width="270dp"
            android:layout_height="54dp"
            android:id="@+id/textViewLoginError"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="54dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="71dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextUN" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="User Login"
            android:layout_width="263dp"
            android:layout_height="75dp"
            android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="77dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="71dp" android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>