<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".User.MyAccount">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/scrollView2"
    >
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="AccountAlias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView_MyAccount_AccountAlias"
                    android:textSize="30sp"/>
            <TextView
                    android:text="accountEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView_MyAccount_Email"
                    android:textSize="24sp"/>
            <TextView
                    android:text="accountInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView_MyAccount_info"/>
            <Button
                    android:text="Logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="614dp"
                    tools:layout_editor_absoluteX="92dp" android:id="@+id/button_MyAccount_Logout"
                    android:onClick="logUserOut"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>