<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdaptiveWebView">

    <WebView
            android:layout_width="390dp"
            android:layout_height="603dp"
            android:id="@+id/WebView_AdaptiveView" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewAdaptiveTextTitle" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
    <TextView
            android:text="Title"
            android:layout_width="333dp"
            android:layout_height="42dp"
            android:id="@+id/textViewAdaptiveTextTitle" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="156dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="156dp"
            android:layout_marginBottom="2dp" app:layout_constraintBottom_toTopOf="@+id/WebView_AdaptiveView"
            app:layout_constraintVertical_bias="0.25"
            android:textAlignment="center" app:layout_constraintVertical_chainStyle="packed"/>
</android.support.constraint.ConstraintLayout>