<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdaptiveWebView">

    <WebView
            android:layout_width="403dp"
            android:layout_height="581dp"
            android:id="@+id/WebView_AdaptiveView" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewAdaptiveTextTitle" android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAdaptiveTextTitle" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="156dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="156dp"
            android:layout_marginBottom="14dp" app:layout_constraintBottom_toTopOf="@+id/WebView_AdaptiveView"
            app:layout_constraintVertical_bias="0.0"
            android:textAlignment="center" app:layout_constraintVertical_chainStyle="packed"/>
</android.support.constraint.ConstraintLayout>