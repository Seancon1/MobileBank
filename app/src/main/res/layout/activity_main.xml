<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="Welcome User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAccountWelcome"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:clickable="true" android:contextClickable="true"
            android:longClickable="false" android:onClick="amILogged"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="96dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="97dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2" app:layout_constraintVertical_bias="0.51"/>
    <Button
            android:text="Refresh Account Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="115dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="115dp"
            app:layout_constraintHorizontal_bias="0.571"
            android:onClick="displayAccountInfo"
            android:layout_marginBottom="1dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" android:paddingBottom="10dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="121dp"
            android:id="@+id/viewBankAccounts" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:visibility="gone">
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="462dp"
            android:id="@+id/linearLayout2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textViewAccountWelcome"
            android:layout_marginBottom="36dp" app:layout_constraintBottom_toTopOf="@+id/button2">
        <TextView
                android:text="TextView"
                android:layout_width="356dp"
                android:layout_height="286dp"
                android:id="@+id/textViewSimpleBankAccountView" android:layout_marginEnd="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="15dp"
                android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/textViewAccountWelcome"
                android:layout_marginBottom="108dp" app:layout_constraintBottom_toTopOf="@+id/buttonAccountSettings"
                app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"
                android:elevation="5dp"/>
        <Button
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonAccountSettings"
                android:layout_marginStart="100dp"
                app:layout_constraintStart_toEndOf="@+id/button2" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="44dp" android:layout_marginBottom="44dp"
                app:layout_constraintBottom_toTopOf="@+id/viewBankAccounts"
                android:onClick="viewAccounts" android:text="More Details" android:layout_marginTop="-35dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>