<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="Welcome User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAccountWelcome" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.089"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:clickable="true" app:layout_constraintHorizontal_bias="0.497" android:contextClickable="true"
            android:longClickable="false" android:onClick="amILogged"/>
    <Button
            android:text="Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonAccountSettings"
            android:layout_marginStart="13dp"
            app:layout_constraintStart_toEndOf="@+id/button2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="59dp" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toTopOf="@+id/viewBankAccounts"
    />
    <Button
            android:text="Test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="162dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="162dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:onClick="displayAccountInfo" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toTopOf="@+id/viewBankAccounts"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="121dp"
            android:id="@+id/viewBankAccounts" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"
    >
    </LinearLayout>
    <TextView
            android:text="TextView"
            android:layout_width="326dp"
            android:layout_height="202dp"
            android:id="@+id/textViewSimpleBankAccountView" android:layout_marginEnd="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="37dp"
            android:layout_marginTop="87dp" app:layout_constraintTop_toBottomOf="@+id/textViewAccountWelcome"
            android:layout_marginBottom="108dp" app:layout_constraintBottom_toTopOf="@+id/buttonAccountSettings"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>